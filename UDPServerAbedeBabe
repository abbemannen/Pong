#include <stdio.h>
#include <SDL.h>
#include <SDL_net.h>
#include <string.h>
#include <stdbool.h>

int main(int argc, char** argv[])
{
	IPaddress server_ip;
	UDPsocket serversock;
	UDPpacket *packet;
	int receivepack;
	SDL_Init(SDL_INIT_EVERYTHING);
	SDLNet_Init();

	SDLNet_ResolveHost(&server_ip, NULL, 1234);
	serversock = SDLNet_UDP_Open(1234);
	if (!serversock)
	{
		printf("SDLNet_UDP_Open: %s\n", SDL_GetError());
		exit(2);
	}
	packet = SDLNet_AllocPacket(1024);
	while (1)
	{
		if (SDLNet_UDP_Recv(serversock, packet))
		{
			printf("Du har f√•tt ett paket\n");
		}
	}
	SDLNet_FreePacket(packet);
	SDLNet_UDP_Close(serversock);
	SDLNet_Quit();
	SDL_Quit();

	return 0;
}
